<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="简单通知栏入门使用" />

    <Button
        android:id="@+id/btn_simple_can_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="简单通知栏可以点击" />

    <Button
        android:id="@+id/btn_sound_and_vibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="通知栏播放声音和振动" />

    <Button
        android:id="@+id/btn_sound_and_vibrate_led"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="通知栏播放声音和振动和呼吸灯LED测试：10后触发，请锁屏" />

    <Button
        android:id="@+id/btn_big_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="大文字通知或者大图片通知，需要切换代码" />

    <Button
        android:id="@+id/btn_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="优先级、重要程度设置\大图展示" />

    <Button
        android:id="@+id/btn_progess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="简单通知栏显示下载进度" />
</LinearLayout>
